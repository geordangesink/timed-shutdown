{
  "name": "timed-shutdown",
  "version": "1.0.2",
  "description": "Cross-platform timed shutdown application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:all": "electron-builder --win --mac --linux",
    "extract-installers": "bash scripts/extract-installers.sh",
    "release": "bash scripts/upload-release.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "shutdown",
    "timer",
    "electron"
  ],
  "author": "Geordan Gesink",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "node-cron": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "build": {
    "appId": "com.timedshutdown.app",
    "productName": "Timed Shutdown",
    "icon": "assets/icon.png",
    "publish": null,
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    }
  }
}
